                        actualizarProgresoDocumentos();
                    }
                } else {
                    // No hay datos en caché, forzar actualización
                    console.log('No se encontraron datos en caché, solicitando al servidor...');
                    await actualizarProgresoDocumentos();
                }
                
                // Función para manejar la actualización del progreso
                const manejarActualizacionProgreso = () => {
                    if (!appState.syncInProgress) {
                        console.log('Actualizando progreso...');
                        actualizarProgresoDocumentos()
                            .catch(error => console.error('Error al actualizar progreso:', error));
                    }
                };

                // Actualizar inmediatamente
                manejarActualizacionProgreso();

                // Configurar sincronización periódica cada 5 segundos
                const intervaloProgreso = setInterval(manejarActualizacionProgreso, 5000);

                // Actualizar cuando la ventana recupera el foco
                window.addEventListener('focus', manejarActualizacionProgreso);

                // Actualizar cuando se hace visible la pestaña
                document.addEventListener('visibilitychange', () => {
                    if (!document.hidden) {
                        manejarActualizacionProgreso();
                    }
                });
                
                // Sincronizar cuando hay conexión a internet
                window.addEventListener('online', () => {
                    console.log('Conexión restablecida, sincronizando...');
                    actualizarProgresoDocumentos();
                });
                
                return true;
            } catch (error) {
                console.error('Error en inicializarSeguimientoProgreso:', error);
                throw error;
            }
        }
        
        // Función para actualizar la barra de progreso
        async function actualizarProgresoDocumentos() {
            console.log('Iniciando actualización de progreso...');
            // Mostrar estado de carga
            const progressBar = document.getElementById('globalProgressBar');
            const progressPercentage = document.getElementById('progressPercentage');
            
            if (progressBar && progressPercentage) {
                progressBar.classList.add('progress-bar-striped', 'progress-bar-animated');
                progressPercentage.textContent = 'Cargando...';
            }
            
            // Evitar múltiples solicitudes simultáneas
            if (appState.syncInProgress) {
                console.log('Sincronización ya en progreso, omitiendo...');
                const cachedData = appState.getCachedData();
                if (cachedData) {
                    actualizarUIProgreso(cachedData.data);
                    return cachedData.data;
                }
                return null;
            }
            
            appState.syncInProgress = true;
            
            try {
                console.log('Solicitando actualización de progreso...');
                
                // Obtener datos del servidor
                const response = await fetch(`/expedientes/{{ expediente.id }}/progreso-documentos/`);
                
                if (!response.ok) {
                    throw new Error(`Error HTTP: ${response.status}`);
                }
                
                const data = await response.json();
                console.log('Datos de progreso recibidos:', data);
                
                // Actualizar caché local
                appState.cacheData(data);
                
                // Actualizar la UI
                actualizarUIProgreso(data);
                
                // Reiniciar contador de reintentos
                appState.retryCount = 0;
                
                return data;
                
            } catch (error) {
                console.error('Error al actualizar el progreso:', error);
                
                // Reintentar si es posible
                if (appState.retryCount < appState.maxRetries) {
                    appState.retryCount++;
                    console.log(`Reintentando (${appState.retryCount}/${appState.maxRetries})...`);
                    
                    // Esperar antes de reintentar
                    await new Promise(resolve => setTimeout(resolve, appState.retryDelay * appState.retryCount));
                    return actualizarProgresoDocumentos();
                }
                
                // Si se agotaron los reintentos, mostrar datos en caché si existen
                const cachedData = appState.getCachedData();
                if (cachedData) {
                    console.log('Usando datos en caché debido a error de conexión');
                    actualizarUIProgreso(cachedData.data);
                    return cachedData.data;
                }
                
                // Si no hay datos en caché, mostrar un mensaje de error
                if (progressBar && progressPercentage) {
                    progressBar.classList.remove('bg-success', 'bg-warning');
                    progressBar.classList.add('bg-danger');
                    progressBar.style.width = '100%';
                    progressPercentage.textContent = 'Error al cargar el progreso';
                }
                
                throw error;
                
            } finally {
                appState.syncInProgress = false;
                
                // Quitar animación de carga
                if (progressBar) {
                    progressBar.classList.remove('progress-bar-striped', 'progress-bar-animated');
                }
            }
        }

