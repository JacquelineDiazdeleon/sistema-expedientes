        // Estado global de la aplicación
        const appState = {
            cacheKey: `expediente_progress_${new Date().toISOString().split('T')[0]}`,
            lastSync: null,
            syncInProgress: false,
            retryCount: 0,
            maxRetries: 3,
            retryDelay: 2000,
            syncInterval: 30000, // 30 segundos
            
            // Obtener datos del caché local
            getCachedData() {
                try {
                    const cached = localStorage.getItem(this.cacheKey);
                    return cached ? JSON.parse(cached) : null;
                } catch (e) {
                    console.error('Error al leer del caché local:', e);
                    return null;
                }
            },
            
            // Guardar datos en caché local
            cacheData(data) {
                try {
                    localStorage.setItem(this.cacheKey, JSON.stringify({
                        data,
                        timestamp: new Date().toISOString()
                    }));
                    this.lastSync = new Date();
                } catch (e) {
                    console.error('Error al guardar en caché local:', e);
                }
            },
            
            // Verificar si los datos en caché están desactualizados
            isCacheStale() {
                if (!this.lastSync) return true;
                const minutesSinceLastSync = (new Date() - this.lastSync) / (1000 * 60);
                return minutesSinceLastSync > 5; // Considerar desactualizado después de 5 minutos
            },
            
            // Limpiar caché antiguo
            cleanupOldCache() {
                try {
                    const oneWeekAgo = new Date();
                    oneWeekAgo.setDate(oneWeekAgo.getDate() - 7);
                    
                    Object.keys(localStorage).forEach(key => {
                        if (key.startsWith('expediente_progress_')) {
                            const item = localStorage.getItem(key);
                            if (item) {
                                try {
                                    const { timestamp } = JSON.parse(item);
                                    if (new Date(timestamp) < oneWeekAgo) {
                                        localStorage.removeItem(key);
                                    }
                                } catch (e) {
                                    // Ignorar elementos con formato inválido
                                }
                            }
                        }
                    });
                } catch (e) {
                    console.error('Error al limpiar caché antiguo:', e);
                }
            }
        };

