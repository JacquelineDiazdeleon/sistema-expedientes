        async function inicializarSeguimientoProgreso() {
            try {
                console.log('Inicializando seguimiento de progreso...');
                
                // Limpiar caché antiguo al iniciar
                appState.cleanupOldCache();
                
                // Intentar cargar desde caché primero para una respuesta rápida
                const cachedData = appState.getCachedData();
                if (cachedData) {
                    console.log('Datos encontrados en caché local');
                    actualizarUIProgreso(cachedData.data);
                    
                    // Si los datos están desactualizados, actualizar en segundo plano
