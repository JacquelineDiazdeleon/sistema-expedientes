// Variable para almacenar el área actual
let areaActual = null;

// Variable para mantener la instancia del modal
let subirDocumentoModal = null;

// Función para abrir el modal de subir documento
function abrirModalSubirDocumento(areaId, areaNombre) {
    try {
        console.log('Abriendo modal para área:', areaId, 'Nombre:', areaNombre);
        
        // Asegurarse de que el ID del área sea un string
        areaActual = String(areaId);

        // Actualizar el campo oculto del formulario
        const areaIdInput = document.getElementById('area_id');
        if (areaIdInput) {
            areaIdInput.value = areaActual;
        } else {
            console.error('No se encontró el campo area_id');
            return;
        }
        
        // Actualizar el título del modal para mostrar el área actual
        const modalTitle = document.querySelector('#subirDocumentoModal .modal-title');
        if (modalTitle && areaNombre) {
            modalTitle.textContent = `Subir Documento - ${areaNombre}`;
        }
        
        // Obtener el elemento del modal
        const modalElement = document.getElementById('subirDocumentoModal');
        if (!modalElement) {
            console.error('No se encontró el elemento del modal');
            return;
        }
        
        // Cerrar el modal si ya está abierto
        if (subirDocumentoModal) {
            subirDocumentoModal.hide();
            subirDocumentoModal.dispose();
        }
        
        // Crear una nueva instancia del modal
        subirDocumentoModal = new bootstrap.Modal(modalElement, {
            backdrop: 'static',
            keyboard: false
        });
        
        // Mostrar el modal
        subirDocumentoModal.show();
        
        // Forzar el foco en el campo de archivo
        setTimeout(() => {
            const fileInput = document.getElementById('archivo');
            if (fileInput) fileInput.focus();
        }, 500);
        
    } catch (error) {
        console.error('Error al abrir el modal:', error);
        // Mostrar un mensaje de error al usuario
        showAlert('Error al abrir el formulario de subida de documentos', 'error');
    }
}

// Función para manejar la subida de documentos
function manejarSubidaDocumento() {
    const form = document.getElementById('formSubirDocumento');
    const fileInput = document.getElementById('documento');
    
    if (!form || !fileInput) {
        console.error('No se encontró el formulario o el campo de archivo');
        return;
    }
    
    console.log('Iniciando subida de documento...');
    console.log('Área actual al iniciar subida:', areaActual);
    
    const uploadAlert = document.getElementById('uploadAlert');
    const uploadSpinner = document.getElementById('uploadSpinner');
    const submitBtn = form.querySelector('button[type="submit"]');
    
    console.log('Iniciando subida de documento para el área:', areaActual);
    
    // Validar archivo
    if (fileInput.files.length === 0) {
        showAlert('Por favor seleccione un archivo', 'danger');
        return;
    }

            // Validar tamaño máximo del archivo (10MB)
            const maxSize = 10 * 1024 * 1024; // 10MB
            if (fileInput.files[0].size > maxSize) {
                showAlert('El archivo es demasiado grande. El tamaño máximo permitido es 10MB.', 'danger');
                return;
            }

            // Validar nombre del documento
            const nombreDocumento = document.getElementById('nombreDocumento').value.trim();
            if (!nombreDocumento) {
                showAlert('Por favor ingrese un nombre para el documento', 'danger');
                return;
            }

            // Mostrar spinner y deshabilitar botón
            uploadSpinner.classList.remove('d-none');
            submitBtn.disabled = true;
            uploadAlert.classList.add('d-none');

            try {
                // Obtener token CSRF
                function getCookie(name) {
                    let cookieValue = null;
                    if (document.cookie && document.cookie !== '') {
                        const cookies = document.cookie.split(';');
                        for (let i = 0; i < cookies.length; i++) {
                            const cookie = cookies[i].trim();
                            if (cookie.substring(0, name.length + 1) === (name + '=')) {
                                cookieValue = decodeURIComponent(cookie.substring(name.length + 1));
                                break;
                            }
                        }
                    }
                    return cookieValue;
                }
                const csrftoken = getCookie('csrftoken');

                // Preparar datos del formulario
                const formData = new FormData(form);
                formData.append('area_id', areaActual);
                
                // Enviar archivo
                const response = await fetch(`/expedientes/{{ expediente.id }}/subir-documento/`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'X-CSRFToken': csrftoken
                    },
                    body: formData
                });

                const data = await response.json();
                
                if (response.ok) {
                    showAlert('✅ Documento subido correctamente', 'success');
                    
                    // Cerrar el modal después de 1 segundo
                    setTimeout(async () => {
                        const modal = bootstrap.Modal.getInstance(document.getElementById('subirDocumentoModal'));
                        if (modal) modal.hide();
                        form.reset();
                        
                        // Actualizar el progreso
                        await onDocumentoSubido();
                        
                        // Si hay un área actual, recargar sus documentos
                        if (areaActual) {
                            const areaElement = document.querySelector(`[data-area-id="${areaActual}"]`);
                            if (areaElement) {
                                const areaNombre = areaElement.textContent.trim();
                                await cargarDocumentosArea(areaActual, areaNombre);
                            }
                        }
                    }, 1000);
                } else {
                    throw new Error(data.error || 'Error al subir el documento');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert(error.message || 'Error al subir el documento. Intente nuevamente.', 'danger');
            } finally {
                uploadSpinner.classList.add('d-none');
                submitBtn.disabled = false;
            }
        }

        // Función para mostrar alertas
        function showAlert(message, type) {
            const alert = document.getElementById('uploadAlert');
            alert.textContent = message;
            alert.className = `alert alert-${type}`;
            alert.classList.remove('d-none');
        }

        // Función para formatear el nombre del área
        function formatearNombreArea(nombre) {
            if (!nombre) return nombre;
            
            // Reemplazar guiones bajos por espacios y capitalizar cada palabra
            return nombre
                .split('_')
                .map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase())
                .join(' ')
                .replace(/\sY\s/g, ' y '); // Mantener 'y' en minúscula
        }

        // Estado global de la aplicación
        const appState = (function() {
            // Obtener el ID del expediente de forma segura
            const expedienteId = '{{ expediente.id }}';
            const cacheKey = `expediente_${expedienteId}_progress`;
            
            // Verificar si el almacenamiento local está disponible
            const isLocalStorageAvailable = (() => {
                try {
                    const testKey = '__test__';
                    localStorage.setItem(testKey, testKey);
                    localStorage.removeItem(testKey);
                    return true;
                } catch (e) {
                    console.warn('El almacenamiento local no está disponible:', e);
                    return false;
                }
            })();
            
            return {
                // Obtener datos del caché local
                getCachedData() {
                    if (!isLocalStorageAvailable) return null;
                    
                    try {
                        const cached = localStorage.getItem(cacheKey);
                        if (cached) {
                            const data = JSON.parse(cached);
                            console.log('Datos recuperados del caché:', data);
                            return data;
                        }
                    } catch (e) {
                        console.error('Error al leer del caché local:', e);
                    }
                    return null;
                },
                
                // Guardar datos en caché local
                cacheData(data) {
                    if (!isLocalStorageAvailable) return;
                    
                    try {
                        const cacheData = {
                            data: data,
                            lastUpdated: new Date().toISOString(),
                            expedienteId: expedienteId
                        };
                        
                        localStorage.setItem(cacheKey, JSON.stringify(cacheData));
                        console.log('Datos guardados en caché:', cacheData);
                    } catch (e) {
                        console.error('Error al guardar en caché local:', e);
                    }
                },
                
                // Cargar datos iniciales
                loadInitialData() {
                    if (!isLocalStorageAvailable) return false;
                    
                    const cachedData = this.getCachedData();
                    if (cachedData && cachedData.data) {
                        // Verificar que los datos en caché correspondan al expediente actual
                        if (cachedData.expedienteId === expedienteId) {
                            console.log('Cargando datos iniciales desde caché para el expediente:', expedienteId);
                            actualizarUIProgreso(cachedData.data, false);
                            return true;
                        } else {
                            console.log('Los datos en caché son de un expediente diferente, ignorando...');
                        }
                    }
                    return false;
                },
                
                // Limpiar caché del expediente actual
                clearCache() {
                    if (!isLocalStorageAvailable) return;
                    
                    try {
                        localStorage.removeItem(cacheKey);
                        console.log('Caché limpiado para el expediente:', expedienteId);
                    } catch (e) {
                        console.error('Error al limpiar el caché:', e);
                    }
                }
            };
        })();

        // Función para actualizar la UI con los datos de progreso
        function actualizarUIProgreso(data, saveToCache = true) {
            console.log('Actualizando UI con datos:', data);
            
            const progressBar = document.getElementById('globalProgressBar');
            const progressPercentage = document.getElementById('progressPercentage');
            const areasCompletadasEl = document.getElementById('areasCompletadas');
            const totalAreasEl = document.getElementById('totalAreas');
            
            if (!progressBar || !progressPercentage || !areasCompletadasEl || !totalAreasEl) {
                console.error('Elementos de la barra de progreso no encontrados');
                return;
            }
            
            // Asegurar que los valores sean números válidos
            const areasCompletadas = Math.max(0, parseInt(data.areas_completadas) || 0);
            const totalAreas = Math.max(1, parseInt(data.total_areas) || 1);
            const porcentaje = Math.min(100, Math.max(0, Math.round((areasCompletadas / totalAreas) * 100)));
            
            console.log(`Progreso: ${porcentaje}% (${areasCompletadas}/${totalAreas} áreas)`);
            
            // Actualizar la barra de progreso
            progressBar.style.width = `${porcentaje}%`;
            progressBar.setAttribute('aria-valuenow', porcentaje);
            
            // Actualizar el texto del porcentaje
            progressPercentage.textContent = `${porcentaje}%`;
            
            // Actualizar contadores de áreas
            areasCompletadasEl.textContent = areasCompletadas;
            totalAreasEl.textContent = totalAreas;
            
            // Actualizar clases de la barra según el progreso
            progressBar.className = 'progress-bar progress-bar-striped progress-bar-animated ';
            if (porcentaje >= 100) {
                progressBar.classList.add('bg-success');
            } else if (porcentaje >= 70) {
                progressBar.classList.add('bg-primary');
            } else if (porcentaje >= 40) {
                progressBar.classList.add('bg-info');
            } else {
                progressBar.classList.add('bg-warning');
            }
            
            // Guardar en caché si es necesario
            if (saveToCache) {
                const progressData = {
                    porcentaje_completo: porcentaje,
                    areas_completadas: areasCompletadas,
                    total_areas: totalAreas,
                    areas: data.areas || []
                };
                appState.cacheData(progressData);
                
                // Actualizar indicadores en la barra lateral si hay datos de áreas
                if (data.areas && Array.isArray(data.areas)) {
                    actualizarIndicadoresAreas(data.areas);
                } else {
                    console.warn('No se encontraron datos de áreas en la respuesta:', data);
                }
            }
        }

        // Función para inicializar la barra de progreso con los valores iniciales
        function inicializarBarraProgresoInicial() {
            const progressBar = document.getElementById('globalProgressBar');
            const progressPercentage = document.getElementById('progressPercentage');
            
            if (progressBar && progressPercentage) {
                // Mostrar estado de carga inicial
                progressBar.style.width = '0%';
                progressBar.setAttribute('aria-valuenow', 0);
                progressBar.className = 'progress-bar progress-bar-striped progress-bar-animated bg-warning';
                progressPercentage.textContent = 'Cargando...';
                
                // Cargar datos iniciales desde caché si existen
                appState.loadInitialData();
                
                // Actualizar desde el servidor en segundo plano
                actualizarProgresoDocumentos().catch(error => {
                    console.error('Error al actualizar el progreso inicial:', error);
                    // No es necesario mostrar error, ya mostramos los datos del caché
                });
                
                return true;
            }
            return false;
        }

        // Función para inicializar el seguimiento de progreso
        async function inicializarSeguimientoProgreso() {
            console.log('Inicializando seguimiento de progreso...');
            
            // Función para manejar la actualización del progreso
            const manejarActualizacionProgreso = async () => {
                try {
                    console.log('Actualizando progreso...');
                    await actualizarProgresoDocumentos();
                } catch (error) {
                    console.error('Error al actualizar progreso:', error);
                }
            };

            // Cargar datos iniciales desde caché
            const cachedData = appState.getCachedData();
            if (cachedData) {
                console.log('Datos encontrados en caché local');
                actualizarUIProgreso(cachedData.data, false);
            }

            // Actualizar desde el servidor en segundo plano
            manejarActualizacionProgreso();

            // Configurar sincronización periódica cada 5 minutos
            const intervaloProgreso = setInterval(manejarActualizacionProgreso, 5 * 60 * 1000);

            // Actualizar cuando la ventana recupera el foco
            window.addEventListener('focus', manejarActualizacionProgreso);

            // Limpiar el intervalo cuando se desmonte el componente
            window.addEventListener('beforeunload', () => {
                clearInterval(intervaloProgreso);
            });
            
            return true;
        }
        
        // Función para actualizar la barra de progreso
        async function actualizarProgresoDocumentos() {
            console.log('[DEBUG] Iniciando actualización de progreso...');
            
            // Mostrar estado de carga
            const progressBar = document.getElementById('globalProgressBar');
            const progressPercentage = document.getElementById('progressPercentage');
            
            if (progressBar && progressPercentage) {
                progressBar.classList.add('progress-bar-striped', 'progress-bar-animated');
                progressBar.style.width = '100%';
                progressBar.classList.remove('bg-success', 'bg-warning', 'bg-info');
                progressBar.classList.add('bg-primary');
                progressPercentage.textContent = 'Actualizando...';
            }
            
            // Usar una variable para evitar múltiples solicitudes simultáneas
            if (window._updatingProgress) {
                console.log('[DEBUG] Actualización ya en progreso, omitiendo...');
                const cachedData = appState.getCachedData();
                return cachedData ? cachedData.data : null;
            }
            
            window._updatingProgress = true;
            
            try {
                const expedienteId = '{{ expediente.id }}';
                if (!expedienteId) {
                    throw new Error('No se encontró el ID del expediente');
                }
                
                const url = `/expedientes/${expedienteId}/progreso-documentos/`;
                console.log('[DEBUG] Solicitando datos de progreso a:', url);
                
                // Obtener datos del servidor con timeout
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 30000); // 30 segundos de timeout
                
                const response = await fetch(url, {
                    signal: controller.signal,
                    headers: {
                        'Accept': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                        'Cache-Control': 'no-cache',
                        'Pragma': 'no-cache'
                    },
                    cache: 'no-store'
                });
                
                clearTimeout(timeoutId);
                
                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('[ERROR] Error en la respuesta del servidor:', {
                        status: response.status,
                        statusText: response.statusText,
                        response: errorText
                    });
                    throw new Error(`Error HTTP ${response.status}: ${response.statusText}`);
                }
                
                const data = await response.json();
                console.log('[DEBUG] Datos de progreso recibidos:', data);
                
                // Validar estructura de datos
                if (!data || typeof data !== 'object') {
                    throw new Error('Respuesta del servidor no es un objeto JSON válido');
                }
                
                // Procesar datos de áreas
                const areas = Array.isArray(data.areas) ? data.areas : [];
                const areasCompletadas = areas.filter(a => a.completada).length;
                const totalAreas = Math.max(1, areas.length); // Evitar división por cero
                const porcentaje = Math.min(100, Math.max(0, Math.round((areasCompletadas / totalAreas) * 100)));
                
                console.log(`[DEBUG] Progreso: ${porcentaje}% (${areasCompletadas}/${totalAreas} áreas)`);
                
                const datosProgreso = {
                    ...data,
                    areas: areas,
                    porcentaje_completo: porcentaje,
                    areas_completadas: areasCompletadas,
                    total_areas: totalAreas
                };
                
                // Actualizar caché y UI
                appState.cacheData(datosProgreso);
                actualizarUIProgreso(datosProgreso);
                
                return datosProgreso;
                
            } catch (error) {
                console.error('[ERROR] Error al actualizar el progreso:', error);
                
                // Intentar cargar datos desde caché en caso de error
                const cachedData = appState.getCachedData();
                if (cachedData) {
                    console.log('[INFO] Usando datos en caché debido a error de conexión');
                    actualizarUIProgreso(cachedData.data);
                    return cachedData.data;
                }
                
                // Mostrar error en la UI si no hay datos en caché
                if (progressBar && progressPercentage) {
                    progressBar.classList.remove('bg-success', 'bg-warning', 'bg-info');
                    progressBar.classList.add('bg-danger');
                    progressBar.style.width = '100%';
                    progressPercentage.textContent = 'Error al cargar el progreso';
                }
                
                throw error;
                
            } finally {
                // Limpiar el indicador de actualización
                window._updatingProgress = false;
                
                // Quitar animación de carga
                if (progressBar) {
                    progressBar.classList.remove('progress-bar-striped', 'progress-bar-animated');
                }
            }
        }

        // Función para actualizar los indicadores visuales en la barra lateral
        function actualizarIndicadoresAreas(areas) {
            areas.forEach(area => {
                const areaElement = document.querySelector(`.area-item[data-area-id="${area.id}"]`);
                if (areaElement) {
                    const iconElement = areaElement.querySelector('i.bi');
                    if (iconElement) {
                        iconElement.className = area.completada ? 
                            'bi bi-check-circle-fill text-success me-2' : 
                            'bi bi-circle me-2';
                    }
                }
            });
        }

        // Actualizar progreso cuando se abre el modal de subir documento
        document.getElementById('subirDocumentoModal').addEventListener('show.bs.modal', function () {
            actualizarProgresoDocumentos();
        });

        // Actualizar progreso después de subir un documento
        async function onDocumentoSubido() {
            console.log('Actualizando progreso después de subir documento...');
            try {
                const data = await actualizarProgresoDocumentos();
                console.log('Datos de progreso actualizados:', data);
                
                if (data) {
                    if (data.porcentaje_completado >= 100) {
                        showAlert('¡Felicidades! Has completado todos los documentos requeridos para este expediente.', 'success');
                    }
                    return data;
                }
            } catch (error) {
                console.error('Error al actualizar el progreso:', error);
            }
            return null;
        }

                });
            }, 100);
            
            // También forzar una actualización cuando la ventana gana el foco
            window.addEventListener('focus', () => {
                console.log('Ventana con foco, actualizando progreso...');
                actualizarProgresoDocumentos();
            });
        });

        // Modificar la función subirDocumento para llamar a onDocumentoSubido después de subir
        async function subirDocumento(event) {
            event.preventDefault();
            
            const form = document.getElementById('formSubirDocumento');
            const formData = new FormData(form);
            const uploadAlert = document.getElementById('uploadAlert');
            const uploadSpinner = document.getElementById('uploadSpinner');
            const submitBtn = form.querySelector('button[type="submit"]');
            
            // Validar archivo
            const fileInput = document.getElementById('documento');
            if (fileInput.files.length === 0) {
                showAlert('Por favor seleccione un archivo', 'danger');
                return;
            }

            // Validar tamaño máximo del archivo (10MB)
            const maxSize = 10 * 1024 * 1024; // 10MB
            if (fileInput.files[0].size > maxSize) {
                showAlert('El archivo es demasiado grande. El tamaño máximo permitido es 10MB.', 'danger');
                return;
            }

            // Validar tipo de documento
            const nombreDocumento = document.getElementById('nombreDocumento').value.trim();
            if (!nombreDocumento) {
                showAlert('Por favor ingrese un nombre para el documento', 'danger');
                return;
            }

            // Mostrar spinner y deshabilitar botón
            uploadSpinner.classList.remove('d-none');
            submitBtn.disabled = true;
            uploadAlert.classList.add('d-none');

            try {
                // Get CSRF token from cookies
                function getCookie(name) {
                    let cookieValue = null;
                    if (document.cookie && document.cookie !== '') {
                        const cookies = document.cookie.split(';');
                        for (let i = 0; i < cookies.length; i++) {
                            const cookie = cookies[i].trim();
                            if (cookie.substring(0, name.length + 1) === (name + '=')) {
                                cookieValue = decodeURIComponent(cookie.substring(name.length + 1));
                                break;
                            }
                        }
                    }
                    return cookieValue;
                }
                const csrftoken = getCookie('csrftoken');

                // Ensure all required fields are in formData
                const formData = new FormData(form);
                formData.append('area_id', areaActual);
                
                const response = await fetch(`/expedientes/{{ expediente.id }}/subir-documento/`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'X-CSRFToken': csrftoken
                    },
                    body: formData
                });

                const data = await response.json();
                
                if (response.ok) {
                    console.log('Documento subido exitosamente');
                    showAlert('✅ Documento subido correctamente', 'success');
                    
                    // Obtener datos de la respuesta
                    let responseData;
                    try {
                        responseData = await response.json();
                        console.log('Respuesta del servidor:', responseData);
                    } catch (e) {
                        console.error('Error al procesar la respuesta JSON:', e);
                        responseData = {};
                    }
                    
                    // Cerrar el modal después de 1 segundo
                    setTimeout(async () => {
                        const modal = bootstrap.Modal.getInstance(document.getElementById('subirDocumentoModal'));
                        if (modal) modal.hide();
                        
                        // Limpiar el formulario
                        form.reset();
                        
                        // Recargar los documentos del área
                        if (areaActual) {
                            console.log('Área actual después de subir:', areaActual);
                            
                            // Obtener el nombre del área para actualizar la vista
                            let areaNombre = '';
                            const areaElement = document.querySelector(`[data-area-id="${areaActual}"]`);
                            if (areaElement) {
                                areaNombre = areaElement.textContent.trim();
                                console.log('Recargando documentos para el área:', areaActual, areaNombre);
                            }
                            
                            // Esperar a que se cierre el modal
                            await new Promise(resolve => setTimeout(resolve, 500));
                            
                            // Actualizar la lista de documentos del área
                            await cargarDocumentosArea(areaActual, areaNombre);
                            
                            // Actualizar la barra de progreso
                            console.log('Actualizando barra de progreso...');
                            const progressData = await actualizarProgresoDocumentos();
                            console.log('Datos de progreso actualizados:', progressData);
                            
                            // Mostrar mensaje si se completó el 100%
                            if (progressData && progressData.porcentaje_completado >= 100) {
                                showAlert('¡Felicidades! Has completado todos los documentos requeridos para este expediente.', 'success');
                            }
                            
                            // Forzar una actualización visual de la barra de progreso
                            const progressBar = document.getElementById('globalProgressBar');
                            if (progressBar) {
                                progressBar.style.transition = 'width 0.6s ease';
                                // Forzar un reflow para asegurar la animación
                                void progressBar.offsetWidth;
                            }
                            
                            // Actualizar el contador de documentos en la pestaña del área
                            const tabLink = document.querySelector(`[data-bs-target="#area-${areaActual}"]`);
                            if (tabLink) {
                                const badge = tabLink.querySelector('.badge');
                                if (badge) {
                                    const currentCount = parseInt(badge.textContent) || 0;
                                    badge.textContent = currentCount + 1;
                                }
                            }
                        }
                    }, 1000);
                } else {
                    throw new Error(data.error || 'Error al subir el documento');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert(error.message || 'Error al subir el documento. Intente nuevamente.', 'danger');
            } finally {
                uploadSpinner.classList.add('d-none');
                submitBtn.disabled = false;
            }
        }

            
            // Formatear nombres de áreas en la tabla de documentos
            document.querySelectorAll('td.area-nombre').forEach(td => {
                td.textContent = formatearNombreArea(td.textContent);
            });
            const form = document.getElementById('formSubirDocumento');
            if (form) {
                form.addEventListener('submit', subirDocumento);
            }
            
            // Limpiar el modal al cerrarlo
            const modal = document.getElementById('subirDocumentoModal');
            if (modal) {
                modal.addEventListener('hidden.bs.modal', function () {
                    form.reset();
                    const alert = document.getElementById('uploadAlert');
                    alert.classList.add('d-none');
                });
            }
        });
    </script>
</body>
</html>
