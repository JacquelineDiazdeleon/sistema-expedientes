{% load dict_extras %}
<!DOCTYPE html>
<html lang="es" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="user" content="{{ user.get_full_name|default:user.username }}" />
    <title>{{ expediente.numero_expediente }} - Sistema de Digitalización</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .min-h-screen {
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Estilos para el tema oscuro */
        [data-theme="dark"] {
            --bg-color: #1a1a1a;
            --text-color: #ffffff;
            --border-color: rgba(75, 85, 99, 0.4);
            --card-bg: #1a1a1a;
            --card-header-bg: #1a1a1a;
            --card-border: rgba(75, 85, 99, 0.4);
            --sidebar-bg: #1a1a1a;
            --sidebar-text: #ffffff;
            --sidebar-hover: rgba(255, 255, 255, 0.1);
        }

        /* Estilos para el tema claro */
        [data-theme="light"] {
            --bg-color: #f8f9fa;
            --text-color: #212529;
            --border-color: #dee2e6;
            --card-bg: #ffffff;
            --card-header-bg: #f8f9fa;
            --card-border: #dee2e6;
            --sidebar-bg: #ffffff;
            --sidebar-text: #212529;
            --sidebar-hover: rgba(0, 0, 0, 0.05);
        }

        /* Aplicar estilos según el tema */
        body {
            background-color: var(--bg-color);
            color: var(--text-color);
        }
        
        /* Asegurar que el texto sea blanco en tema oscuro */
        [data-theme="dark"] {
            color: #ffffff;
        }
        
        /* Asegurar que los textos en tarjetas y contenedores sean visibles */
        [data-theme="dark"] .card,
        [data-theme="dark"] .card-header,
        [data-theme="dark"] .card-body,
        [data-theme="dark"] .list-group-item {
            color: #ffffff !important;
        }
        
        /* Asegurar que los enlaces sean visibles en tema oscuro */
        [data-theme="dark"] a {
            color: #80b4ff !important;
        }
        
        [data-theme="dark"] a:hover {
            color: #a8c7ff !important;
        }
        
        /* Estilos para el área de subida de documentos */
        .modal-content {
            background-color: #ffffff !important;
            color: #212529 !important;
        }
        
        .form-control, .form-select, .form-control:focus, .form-select:focus {
            background-color: #ffffff !important;
            color: #212529 !important;
            border-color: #ced4da !important;
        }
        
        .form-label, .form-text {
            color: #212529 !important;
        }

        .card {
            background: var(--card-bg) !important;
            border: 1px solid var(--card-border) !important;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: var(--card-header-bg) !important;
            border-bottom: 1px solid var(--border-color) !important;
        }

        /* Estilos para los botones */
        .btn-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%) !important;
            border: none !important;
            color: #ffffff !important;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%) !important;
        }

        /* Estilos para el sidebar */
        .areas-sidebar {
            width: 320px;
            background: var(--sidebar-bg);
            color: var(--sidebar-text);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            overflow-y: auto;
            transition: all 0.3s ease;
            z-index: 1040;
            padding: 15px;
            border-right: 1px solid var(--border-color);
        }

        .main-content {
            margin-left: 320px;
            transition: all 0.3s ease;
        }

        /* Responsive */
        @media (max-width: 991.98px) {
            .areas-sidebar {
                transform: translateX(-100%);
            }
            
            .areas-sidebar.show {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0;
                width: 100%;
            }
        }

        /* Estilos para los items de área */
        .area-item {
            padding: 10px 15px;
            margin-bottom: 5px;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .area-item {
            color: var(--sidebar-text);
        }
        
        .area-item:hover {
            background: var(--sidebar-hover);
        }

        .area-item.active {
            background: rgba(59, 130, 246, 0.2);
            border-left: 3px solid #3b82f6;
        }
    </style>
</head>
<body>
    <div class="min-h-screen">
        <!-- Sidebar Toggle Button (Mobile) -->
        <button class="btn btn-primary d-lg-none position-fixed" style="z-index: 1050; top: 10px; left: 10px;" onclick="toggleSidebar()">
            <i class="bi bi-list"></i>
        </button>
        
        <!-- Sidebar de áreas -->
        <div class="areas-sidebar">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="mb-0">Áreas</h5>
                <button class="btn btn-sm btn-outline-light" onclick="toggleSidebar()">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="list-group">
                {% for area in areas %}
                <div class="area-item" data-area-id="{{ area.id }}" onclick="cargarDocumentosArea('{{ area.id }}', '{{ area.nombre }}')">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>{{ area.nombre }}</span>
                        <span class="badge bg-primary rounded-pill">{{ area.documentos_count }}</span>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="main-content">
            <div class="container-fluid py-4">
                <!-- Header del expediente -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">{{ expediente.numero_expediente }} - {{ expediente.titulo }}</h4>
                        <div>
                            <button class="btn btn-primary" onclick="cambiarTema()">
                                <i class="bi bi-sun-fill d-none" id="icono-tema-claro"></i>
                                <i class="bi bi-moon-fill" id="icono-tema-oscuro"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Estado:</strong> {{ expediente.get_estado_display }}</p>
                                <p class="mb-2"><strong>Fecha de creación:</strong> {{ expediente.fecha_creacion|date:"d/m/Y" }}</p>
                                <p class="mb-2"><strong>Departamento:</strong> {{ expediente.departamento.nombre }}</p>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-dark bg-opacity-10 p-3 mb-3">
                                    <h6 class="card-title text-muted mb-3">Progreso del Expediente</h6>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="small text-muted">Completado</span>
                                        <span id="progressPercentage" class="h5 mb-0 fw-bold">0%</span>
                                    </div>
                                    <div class="progress" style="height: 12px;">
                                        <div id="globalProgressBar" class="progress-bar progress-bar-striped progress-bar-animated" 
                                             role="progressbar" 
                                             style="width: 0%; transition: width 0.6s ease;" 
                                             aria-valuenow="0" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                    <div id="areaProgressContainer" class="mt-3">
                                        <div class="d-flex justify-content-between small text-muted">
                                            <span>Áreas completadas:</span>
                                            <span id="areasCompletadas">0</span>/<span id="totalAreas">0</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-download"></i> Descargar
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#subirDocumentoModal">
                                        <i class="bi bi-upload"></i> Subir Documento
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contenido de documentos -->
                <div class="card">
                    <div class="card-header">
                        <h5 id="titulo-area-seleccionada" class="mb-0">Seleccione un área</h5>
                    </div>
                    <div class="card-body" id="contenido-documentos">
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-folder2-open" style="font-size: 3rem;"></i>
                            <p class="mt-3">Seleccione un área para ver los documentos</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para subir documento -->
    <div class="modal fade" id="subirDocumentoModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Subir Documento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="formSubirDocumento" enctype="multipart/form-data">
                    {% csrf_token %}
                    <input type="hidden" id="area_id" name="area_id" value="">
                    <div class="modal-body">
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span class="small text-muted">Progreso general del expediente</span>
                                <span id="progressPercentage" class="small fw-bold">0%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div id="globalProgressBar" class="progress-bar progress-bar-striped progress-bar-animated" 
                                     role="progressbar" style="width: 0%" 
                                     aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                            <div id="areaProgressContainer" class="mt-3">
                                <!-- Area-specific progress will be inserted here -->
                            </div>
                        </div>
                        <div id="uploadAlert" class="alert d-none" role="alert"></div>
                        <div class="mb-3">
                            <label for="nombreDocumento" class="form-label">Nombre del documento</label>
                            <input type="text" class="form-control" id="nombreDocumento" name="nombre_documento" placeholder="Ej. Contrato de servicios, Factura de compra, etc." required>
                        </div>
                        <div class="mb-3">
                            <label for="documento" class="form-label">Seleccionar archivo</label>
                            <input class="form-control" type="file" id="documento" name="documento" accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png" required>
                            <div class="form-text">Formatos permitidos: PDF, Word, Excel, JPG, PNG (Máx. 10MB)</div>
                        </div>
                        <div class="mb-3">
                            <label for="observaciones" class="form-label">Observaciones (opcional)</label>
                            <textarea class="form-control" id="observaciones" name="observaciones" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">
                            <span class="spinner-border spinner-border-sm d-none" id="uploadSpinner" role="status" aria-hidden="true"></span>
                            Subir Documento
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Función para alternar el sidebar en móviles
        function toggleSidebar() {
            document.querySelector('.areas-sidebar').classList.toggle('show');
        }

        // Función para cambiar entre temas claro/oscuro
        function cambiarTema() {
            const html = document.documentElement;
            const temaActual = html.getAttribute('data-theme');
            const nuevoTema = temaActual === 'dark' ? 'light' : 'dark';
            
            html.setAttribute('data-theme', nuevoTema);
            localStorage.setItem('tema', nuevoTema);
            actualizarIconosTema(nuevoTema);
        }

        // Función para actualizar los íconos del tema
        function actualizarIconosTema(tema) {
            const iconoTemaClaro = document.getElementById('icono-tema-claro');
            const iconoTemaOscuro = document.getElementById('icono-tema-oscuro');
            
            if (tema === 'dark') {
                iconoTemaClaro.classList.add('d-none');
                iconoTemaOscuro.classList.remove('d-none');
            } else {
                iconoTemaClaro.classList.remove('d-none');
                iconoTemaOscuro.classList.add('d-none');
            }
        }

        // Función para inicializar la aplicación
        async function inicializarAplicacion() {
            try {
                // Inicializar tema
                const temaGuardado = localStorage.getItem('tema') || 'dark';
                document.documentElement.setAttribute('data-theme', temaGuardado);
                actualizarIconosTema(temaGuardado);
                
                // Cargar progreso desde caché inmediatamente
                const cachedData = appState.getCachedData();
                if (cachedData) {
                    console.log('Cargando progreso desde caché...');
                    actualizarUIProgreso(cachedData.data, false);
                } else {
                    // Mostrar estado de carga inicial
                    const progressBar = document.getElementById('globalProgressBar');
                    const progressPercentage = document.getElementById('progressPercentage');
                    if (progressBar && progressPercentage) {
                        progressBar.style.width = '0%';
                        progressBar.setAttribute('aria-valuenow', 0);
                        progressBar.className = 'progress-bar progress-bar-striped progress-bar-animated bg-warning';
                        progressPercentage.textContent = 'Cargando...';
                    }
                }
                
                // Cargar documentos del primer área por defecto
                const primeraArea = document.querySelector('.area-item');
                if (primeraArea) {
                    const areaId = primeraArea.getAttribute('data-area-id');
                    const areaNombre = primeraArea.querySelector('span:first-child').textContent;
                    await cargarDocumentosArea(areaId, areaNombre);
                }
                
                // Actualizar progreso desde el servidor
                await actualizarProgresoDocumentos();
                
                // Formatear nombres de áreas en la lista lateral
                document.querySelectorAll('.area-item span:first-child').forEach(span => {
                    span.textContent = formatearNombreArea(span.textContent);
                });
                
            } catch (error) {
                console.error('Error en la inicialización:', error);
                
                // Si hay un error, intentar cargar desde caché
                const cachedData = appState.getCachedData();
                if (cachedData) {
                    console.log('Usando datos en caché debido a error de inicialización');
                    actualizarUIProgreso(cachedData.data, false);
                }
            }
        }
        
        // Inicializar cuando el DOM esté listo
        async function iniciarAplicacion() {
            // Mostrar estado de carga inicial
            const progressBar = document.getElementById('globalProgressBar');
            const progressPercentage = document.getElementById('progressPercentage');
            
            // Cargar datos del progreso desde caché inmediatamente
            const cachedData = appState.getCachedData();
            if (cachedData) {
                console.log('Cargando progreso desde caché...');
                actualizarUIProgreso(cachedData.data, false);
            } else if (progressBar && progressPercentage) {
                progressBar.style.width = '0%';
                progressBar.setAttribute('aria-valuenow', 0);
                progressBar.className = 'progress-bar progress-bar-striped progress-bar-animated bg-warning';
                progressPercentage.textContent = 'Cargando...';
            }
            
            // Inicializar la aplicación
            await inicializarAplicacion();
        }

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', iniciarAplicacion);
        } else {
            // El DOM ya está listo
            setTimeout(iniciarAplicacion, 100);
        }

        // Función para formatear la fecha
        function formatearFecha(fechaISO) {
            const opciones = { 
                year: '2-digit', 
                month: '2-digit', 
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            };
            return new Date(fechaISO).toLocaleDateString('es-MX', opciones);
        }

        // Función para obtener el ícono según el tipo de archivo
        function obtenerIconoTipoArchivo(nombreArchivo) {
            const extension = nombreArchivo.split('.').pop().toLowerCase();
            const iconos = {
                'pdf': 'file-pdf',
                'doc': 'file-word',
                'docx': 'file-word',
                'xls': 'file-excel',
                'xlsx': 'file-excel',
                'jpg': 'file-image',
                'jpeg': 'file-image',
                'png': 'file-image',
                'txt': 'file-text',
                'zip': 'file-zip',
                'rar': 'file-zip',
                'mp3': 'file-music',
                'mp4': 'file-play',
                'ppt': 'file-ppt',
                'pptx': 'file-ppt',
            };
            return iconos[extension] || 'file-earmark';
        }

        // Función para formatear el tamaño del archivo
        function formatearTamanoArchivo(bytes, fileUrl = null) {
            // Si bytes es undefined, null o no es un número, devolver 'No disponible'
            if (bytes === undefined || bytes === null || bytes === '') {
                console.warn('Tamaño de archivo no disponible');
                if (fileUrl) {
                    // Intentar obtener el tamaño del archivo desde la URL
                    return obtenerTamanioArchivoDesdeUrl(fileUrl);
                }
                return '<span class="text-muted">No disponible</span>';
            }
            
            // Convertir a número si es string
            const size = typeof bytes === 'string' ? parseFloat(bytes) : bytes;
            
            // Verificar si el valor es un número válido
            if (isNaN(size) || !isFinite(size) || size < 0) {
                console.warn('Tamaño de archivo inválido:', bytes);
                if (fileUrl) {
                    // Intentar obtener el tamaño del archivo desde la URL
                    return obtenerTamanioArchivoDesdeUrl(fileUrl);
                }
                return '<span class="text-muted">No disponible</span>';
            }
            
            if (size === 0) {
                console.warn('Tamaño de archivo es 0, verificando tamaño real...');
                if (fileUrl) {
                    // Intentar obtener el tamaño del archivo desde la URL
                    return obtenerTamanioArchivoDesdeUrl(fileUrl);
                }
                return '<span class="text-warning" title="El tamaño del archivo no se pudo determinar">Verificando...</span>';
            }
            
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB'];
            const i = Math.min(Math.floor(Math.log(size) / Math.log(k)), sizes.length - 1);
            return (size / Math.pow(k, i)).toFixed(2) + ' ' + sizes[i];
        }
        
        // Función para obtener el tamaño del archivo desde la URL
        async function obtenerTamanioArchivoDesdeUrl(fileUrl) {
            if (!fileUrl) return '<span class="text-muted">No disponible</span>';
            
            try {
                const response = await fetch(fileUrl, { method: 'HEAD' });
                if (response.ok) {
                    const contentLength = response.headers.get('content-length');
                    if (contentLength) {
                        const size = parseInt(contentLength, 10);
                        if (!isNaN(size) && size > 0) {
                            const k = 1024;
                            const sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB'];
                            const i = Math.min(Math.floor(Math.log(size) / Math.log(k)), sizes.length - 1);
                            return (size / Math.pow(k, i)).toFixed(2) + ' ' + sizes[i];
                        }
                    }
                }
            } catch (error) {
                console.error('Error al obtener el tamaño del archivo:', error);
            }
            
            return '<span class="text-muted">No disponible</span>';
        }

        // Función para calcular el tiempo transcurrido
        function tiempoTranscurrido(fechaISO) {
            const ahora = new Date();
            const fecha = new Date(fechaISO);
            const segundos = Math.floor((ahora - fecha) / 1000);
            
            let intervalo = Math.floor(segundos / 31536000);
            if (intervalo > 1) return `hace ${intervalo} años`;
            if (intervalo === 1) return 'hace un año';
            
            intervalo = Math.floor(segundos / 2592000);
            if (intervalo > 1) return `hace ${intervalo} meses`;
            if (intervalo === 1) return 'hace un mes';
            
            intervalo = Math.floor(segundos / 86400);
            if (intervalo > 1) return `hace ${intervalo} días`;
            if (intervalo === 1) return 'ayer';
            
            intervalo = Math.floor(segundos / 3600);
            if (intervalo > 1) return `hace ${intervalo} horas`;
            if (intervalo === 1) return 'hace una hora';
            
            intervalo = Math.floor(segundos / 60);
            if (intervalo > 1) return `hace ${intervalo} minutos`;
            if (intervalo === 1) return 'hace un minuto';
            
            return 'hace unos segundos';
        }

        // Función para cargar documentos de un área
        async function cargarDocumentosArea(areaId, nombreArea) {
            const contenedor = document.getElementById('contenido-documentos');
            const tituloArea = document.getElementById('titulo-area-seleccionada');
            
            if (tituloArea) {
                tituloArea.textContent = formatearNombreArea(nombreArea);
                // Resaltar el área seleccionada en el sidebar
                document.querySelectorAll('.area-item').forEach(item => {
                    item.classList.remove('active');
                    if (item.dataset.areaId === areaId) {
                        item.classList.add('active');
                    }
                });
            }

            // Crear botón de completar etapa
            const btnCompletar = document.createElement('button');
            btnCompletar.className = 'btn btn-success';
            btnCompletar.style.margin = '10px';
            btnCompletar.innerHTML = '<i class="bi bi-check-circle me-1"></i> Completar Etapa';
            btnCompletar.onclick = function() {
                if(confirm('¿Está seguro que desea marcar esta etapa como completada?')) {
                    window.location.href = `/expedientes/{{ expediente.id }}/completar-etapa/${areaId}/`;
                }
            };
            
            // Crear contenedor de botones con estilos para hacerlo visible
            const contenedorBotones = document.createElement('div');
            contenedorBotones.id = 'contenedor-botones-accion';
            contenedorBotones.className = 'd-flex justify-content-end p-3';
            contenedorBotones.style.backgroundColor = '#f8f9fa';
            contenedorBotones.style.borderBottom = '1px solid #dee2e6';
            
            // Agregar el botón al contenedor
            contenedorBotones.appendChild(btnCompletar);
            
            // Insertar el contenedor en la página
            const card = document.querySelector('.card');
            if (card) {
                // Insertar después del encabezado de la tarjeta
                const cardHeader = card.querySelector('.card-header');
                if (cardHeader && cardHeader.nextSibling) {
                    card.insertBefore(contenedorBotones, cardHeader.nextSibling);
                } else {
                    // Si no se puede insertar después del encabezado, insertar al principio del card-body
                    const cardBody = card.querySelector('.card-body');
                    if (cardBody) {
                        cardBody.prepend(contenedorBotones);
                    } else {
                        // Si no hay card-body, agregar al final de la tarjeta
                        card.appendChild(contenedorBotones);
                    }
                }
                
                // Mensaje de depuración
                console.log('Botón de completar etapa agregado correctamente');
            } else {
                console.error('No se pudo encontrar el elemento .card en la página');
            }
            
            // Mostrar mensaje de carga con animación
            contenedor.innerHTML = `
                <div class="text-center py-5 fade-in">
