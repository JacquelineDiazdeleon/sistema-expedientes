  <script>
    // Función para alternar entre temas
    function toggleTheme() {
      const html = document.documentElement;
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'light' ? 'dark' : 'light';
      
      // Cambiar el tema
      html.setAttribute('data-theme', newTheme);
      
      // Guardar la preferencia en localStorage
      localStorage.setItem('theme', newTheme);
      
      // Actualizar el icono del botón
      updateThemeIcon(newTheme);
      
      // Agregar efecto de transición
      document.body.style.transition = 'all 0.3s ease';
    }
    
    // Función para actualizar el icono del botón de tema
    function updateThemeIcon(theme) {
      const sunIcon = document.querySelector('.sun-icon');
      const sunRays = document.querySelector('.sun-rays');
      const moonIcon = document.querySelector('.moon-icon');
      
      if (theme === 'light') {
        sunIcon.style.display = 'none';
        sunRays.style.display = 'none';
        moonIcon.style.display = 'block';
      } else {
        sunIcon.style.display = 'block';
        sunRays.style.display = 'block';
        moonIcon.style.display = 'none';
      }
    }
    
    // Función para inicializar el tema
    function initializeTheme() {
      const savedTheme = localStorage.getItem('theme') || 'dark';
      document.documentElement.setAttribute('data-theme', savedTheme);
      updateThemeIcon(savedTheme);
    }
    
    // Función para alternar el panel de notificaciones
    function toggleNotifications() {
      const panel = document.getElementById('notificationsPanel');
      const profilePanel = document.getElementById('profilePanel');
      
      // Cerrar el panel de perfil si está abierto
      if (profilePanel.style.display !== 'none') {
        profilePanel.style.display = 'none';
      }
      
      // Alternar el panel de notificaciones
      if (panel.style.display === 'none') {
        panel.style.display = 'block';
        // Agregar animación de entrada
        panel.style.transform = 'scale(0.95) translateY(-10px)';
        panel.style.opacity = '0';
        setTimeout(() => {
          panel.style.transform = 'scale(1) translateY(0)';
          panel.style.opacity = '1';
        }, 10);
      } else {
        // Agregar animación de salida
        panel.style.transform = 'scale(0.95) translateY(-10px)';
        panel.style.opacity = '0';
        setTimeout(() => {
          panel.style.display = 'none';
          panel.style.transform = 'scale(1) translateY(0)';
          panel.style.opacity = '1';
        }, 200);
      }
    }
    
    // Función para alternar el panel de perfil
    function toggleProfile() {
      const panel = document.getElementById('profilePanel');
      const notificationsPanel = document.getElementById('notificationsPanel');
      
      // Cerrar el panel de notificaciones si está abierto
      if (notificationsPanel.style.display !== 'none') {
        notificationsPanel.style.display = 'none';
      }
      
      // Alternar el panel de perfil
      if (panel.style.display === 'none') {
        panel.style.display = 'block';
        // Agregar animación de entrada
        panel.style.transform = 'scale(0.95) translateY(-10px)';
        panel.style.opacity = '0';
        setTimeout(() => {
          panel.style.transform = 'scale(1) translateY(0)';
          panel.style.opacity = '1';
        }, 10);
      } else {
        // Agregar animación de salida
        panel.style.transform = 'scale(0.95) translateY(-10px)';
        panel.style.opacity = '0';
        setTimeout(() => {
          panel.style.display = 'none';
          panel.style.transform = 'scale(1) translateY(0)';
          panel.style.opacity = '1';
        }, 200);
      }
    }
    
    // Función para marcar todas las notificaciones como leídas
    function marcarTodasComoLeidas() {
      // Aquí se podría hacer una llamada AJAX al backend para marcar como leídas
      // Por ahora, solo actualizamos la UI
      const notificationItems = document.querySelectorAll('.notification-item');
      const notificationBadge = document.querySelector('.notification-badge');
      
      notificationItems.forEach(item => {
        item.classList.remove('unread');
      });
      
      // Ocultar el badge de notificaciones
      if (notificationBadge) {
        notificationBadge.style.display = 'none';
      }
      
      // Mostrar mensaje de confirmación
      const header = document.querySelector('.panel-header h4');
      const originalText = header.textContent;
      header.textContent = 'Todas marcadas como leídas';
      header.style.color = '#10b981';
      
      setTimeout(() => {
        header.textContent = originalText;
        header.style.color = '';
      }, 2000);
    }
    
    // Función para marcar una notificación individual como leída
    function marcarComoLeida(notificationElement, notificationId) {
      // Aquí se podría hacer una llamada AJAX al backend para marcar como leída
      // Por ahora, solo actualizamos la UI
      notificationElement.classList.remove('unread');
      
      // Actualizar el contador de notificaciones
      const notificationBadge = document.querySelector('.notification-badge');
      if (notificationBadge) {
        const currentCount = parseInt(notificationBadge.textContent) || 0;
        if (currentCount > 0) {
          notificationBadge.textContent = currentCount - 1;
          if (currentCount - 1 === 0) {
            notificationBadge.style.display = 'none';
          }
        }
      }
      
      // Efecto visual de confirmación
      notificationElement.style.background = 'rgba(16, 185, 129, 0.1)';
      setTimeout(() => {
        notificationElement.style.background = '';
      }, 1000);
    }
    
    // Cerrar paneles al hacer clic fuera de ellos
    document.addEventListener('click', function(event) {
      const notificationsPanel = document.getElementById('notificationsPanel');
      const profilePanel = document.getElementById('profilePanel');
      const notificationsBtn = document.querySelector('.icon-button[onclick="toggleNotifications()"]');
      const profileBtn = document.querySelector('.icon-button[onclick="toggleProfile()"]');
      
      // Si se hace clic fuera de los botones y paneles, cerrar todo
      if (notificationsBtn && profileBtn && 
          !notificationsBtn.contains(event.target) && 
          !profileBtn.contains(event.target) && 
          !notificationsPanel.contains(event.target) && 
          !profilePanel.contains(event.target)) {
        
        // Cerrar panel de notificaciones con animación
        if (notificationsPanel.style.display !== 'none') {
          notificationsPanel.style.transform = 'scale(0.95) translateY(-10px)';
          notificationsPanel.style.opacity = '0';
          setTimeout(() => {
            notificationsPanel.style.display = 'none';
            notificationsPanel.style.transform = 'scale(1) translateY(0)';
            notificationsPanel.style.opacity = '1';
          }, 200);
        }
        
        // Cerrar panel de perfil con animación
        if (profilePanel.style.display !== 'none') {
          profilePanel.style.transform = 'scale(0.95) translateY(-10px)';
          profilePanel.style.opacity = '0';
          setTimeout(() => {
            profilePanel.style.display = 'none';
            profilePanel.style.transform = 'scale(1) translateY(0)';
            profilePanel.style.opacity = '1';
          }, 200);
        }
      }
    });
    
    // Inicializar el tema al cargar la página
    document.addEventListener('DOMContentLoaded', function() {
      initializeTheme();
      
      // Agregar event listeners para las notificaciones
      const notificationItems = document.querySelectorAll('.notification-item');
      notificationItems.forEach(item => {
        item.addEventListener('click', function() {
          const notificationId = this.getAttribute('data-notification-id');
          marcarComoLeida(this, notificationId);
        });
      });
    });
  </script>
</body>
